  "version": "0.2.0",
  "configurations": [
    {
      "name": "Prompt (auto)",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/finder.py",
      "console": "internalConsole",
      "env": {
        "SYS_VARS_PATH": "${workspaceFolder}/../secrets"
      },
      "args": [
        "prompt"
      ]
    },
    {
      "name": "Prompt (manual)",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/finder.py",
      "console": "externalTerminal",
      "env": {
        "SYS_VARS_PATH": "${workspaceFolder}/../secrets"
      },
      "args": [
        "prompt",
        "--manual"
      ]
    },
    {
      "name": "Prompt (schedule)",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/finder.py",
      "console": "internalConsole",
      "env": {
        "SYS_VARS_PATH": "${workspaceFolder}/../secrets",
        "SCHEDULE_TIMES": "[\"*/2 *\", \"*/7 *\"]"
      },
      "args": [
        "schedule",
        "--prompt"
      ]
    },
    {
      "name": "Archive (generate)",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/finder.py",
      "console": "internalConsole",
      "env": {
        "SYS_VARS_PATH": "${workspaceFolder}/../secrets",
        "DOWNLOADS_PATH": "${workspaceFolder}/../static/downloads"
      },
      "args": [
        "archive"
      ]
    },
    {
      "name": "Archive (regenerate)",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/finder.py",
      "console": "internalConsole",
      "env": {
        "SYS_VARS_PATH": "${workspaceFolder}/../secrets",
        "DOWNLOADS_PATH": "${workspaceFolder}/../static/downloads"
      },
      "args": [
        "archive",
        "-r"
      ]
    },
        {
      "name": "Backup",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/finder.py",
      "console": "internalConsole",
      "env": {
        "SYS_VARS_PATH": "${workspaceFolder}/../secrets"
      },
      "args": [
        "schedule",
        "--backup"
      ]
    },
    {
      "name": "Email",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/finder.py",
      "console": "internalConsole",
      "env": {
        "SYS_VARS_PATH": "${workspaceFolder}/../secrets"
      },
      "args": [
        "email"
      ]
    }
  ]
}
