  "version": "0.2.0",
  "configurations": [
    {
      "name": "Finder (auto)",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/finder.py",
      "console": "internalConsole",
      "env": {
        "DOCKER_SECRETS_PATH": "${workspaceFolder}/secrets"
      },
      "args": ["--fetch"]
    },
    {
      "name": "Finder (manual)",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/finder.py",
      "console": "externalTerminal",
      "env": {
        "DOCKER_SECRETS_PATH": "${workspaceFolder}/secrets"
      },
      "args": ["--manual"]
    },
    {
      "name": "Finder (schedule)",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/finder.py",
      "console": "internalConsole",
      "env": {
        "DOCKER_SECRETS_PATH": "${workspaceFolder}/secrets",
        "SCHEDULE_TIMES": "[\"*/2 *\", \"*/7 *\"]"
      },
      "args": ["--schedule"]
    },
    {
      "name": "Finder (archive)",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/finder.py",
      "console": "internalConsole",
      "env": {
        "DOCKER_SECRETS_PATH": "${workspaceFolder}/secrets",
        "SCHEDULE_TIMES": "[\"*/2 *\", \"*/7 *\"]"
      },
      "args": ["--archive"]
    }
  ]
}
